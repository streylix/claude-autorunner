{
  "name": "auto-injector",
  "version": "1.0.0",
  "description": "Automated message injection terminal with queuing system",
  "main": "main.js",
  "author": "Auto-Injector",
  "license": "MIT",
  "keywords": [
    "terminal",
    "gui",
    "queue",
    "automation"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.auto.injector",
    "productName": "Auto-Injector",
    "mac": {
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "icon": "assets/icons/icon.png"
    },
    "files": [
      "**/*",
      "!node_modules/.cache"
    ],
    "directories": {
      "buildResources": "."
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "lucide": "^0.460.0",
    "node-ffmpeg-installer": "^1.1.2",
    "node-pty": "^1.0.0",
    "wavefile": "^11.0.0"
  }
}
