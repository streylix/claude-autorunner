{
  "name": "auto-injector",
  "version": "1.0.0",
  "description": "Automated message injection terminal with queuing system",
  "main": "main.js",
  "author": {
    "name": "Auto-Injector",
    "email": "auto-injector@example.com"
  },
  "license": "MIT",
  "keywords": [
    "terminal",
    "gui",
    "queue",
    "automation"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "dist": "npm run build",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild"
  },
  "build": {
    "appId": "com.auto.injector",
    "productName": "Auto-Injector",
    "compression": "normal",
    "publish": null,
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icons/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/icon.png",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!test_env/**/*",
      "!tests/**/*",
      "!backend/**/*",
      "!coverage/**/*",
      "!.git/**/*",
      "!*.log"
    ],
    "directories": {
      "buildResources": ".",
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "lucide": "^0.460.0",
    "node-fetch": "^3.3.2",
    "node-ffmpeg-installer": "^1.1.2",
    "node-pty": "^1.0.0",
    "wavefile": "^11.0.0"
  }
}
